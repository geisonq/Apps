<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.edu.ifsul.minhasactivities.MainActivity">

    <ImageView
        android:id="@+id/imgViewStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/nature"
        android:scaleType="centerCrop"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/btnEntrar"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="73dp"
        android:layout_height="32dp"
        android:background="?android:attr/textColorLinkInverse"
        android:elevation="13dp"
        android:onClick="proximaTela"
        android:text="Entrar"
        android:layout_marginLeft="156dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="@+id/imgViewStart"
        android:layout_marginTop="245dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.078" />

</android.support.constraint.ConstraintLayout>
